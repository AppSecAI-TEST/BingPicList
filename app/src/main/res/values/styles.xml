<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.ToolBar.My" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.My</item>
        <item name="android:itemBackground">@color/menuBack</item>
        <item name="actionOverflowMenuStyle">@style/ActionButton.Overflow.My</item>
    </style>
    <style name="ActionButton.Overflow.My" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/menu</item>
        <item name="overlapAnchor">false</item>
    </style>
</resources>
