<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.ToolBar.My" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.My</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">2dp</item>
        <item name="actionOverflowMenuStyle">@style/ActionButton.Overflow.My</item>
    </style>
    <style name="ActionButton.Overflow.My" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="overlapAnchor">false</item>
    </style>
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>
